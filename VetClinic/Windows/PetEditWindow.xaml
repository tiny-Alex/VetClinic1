<Window x:Class="VetClinic.Windows.PetEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.Windows"
        mc:Ignorable="d"
        Title="PetEditWindow" Height="450" Width="800">
    <Grid Background="#FAF0E6">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">

                <Border Background="#8B7355" CornerRadius="3" Padding="10" Margin="0,0,0,15">
                    <TextBlock x:Name="TitleText" Text="Редактирование питомца" 
                              Foreground="White" FontSize="16" 
                              HorizontalAlignment="Center"/>
                </Border>

                <Label x:Name="OwnerLabel" Content="Владелец" Foreground="#8B7355" FontWeight="Bold"/>
                <ComboBox x:Name="OwnerCombo" Height="30" Margin="0,2,0,10"/>

                <Label x:Name="NameLabel" Content="Имя питомца" Foreground="#8B7355" FontWeight="Bold"/>
                <TextBox x:Name="NameBox" Height="30" Margin="0,2,0,10"/>

                <Label x:Name="SpeciesLabel" Content="Вид" Foreground="#8B7355" FontWeight="Bold"/>
                <ComboBox x:Name="SpeciesCombo" Height="30" Margin="0,2,0,10">
                    <ComboBoxItem Content="Собака"/>
                    <ComboBoxItem Content="Кошка"/>
                    <ComboBoxItem Content="Птица"/>
                    <ComboBoxItem Content="Грызун"/>
                    <ComboBoxItem Content="Другое"/>
                </ComboBox>

                <Label x:Name="BreedLabel" Content="Порода" Foreground="#8B7355" FontWeight="Bold"/>
                <TextBox x:Name="BreedBox" Height="30" Margin="0,2,0,10"/>

                <Label x:Name="BirthLabel" Content="Дата рождения" Foreground="#8B7355" FontWeight="Bold"/>
                <DatePicker x:Name="BirthDatePicker" Height="30" Margin="0,2,0,10"/>

                <Label x:Name="GenderLabel" Content="Пол" Foreground="#8B7355" FontWeight="Bold"/>
                <ComboBox x:Name="GenderCombo" Height="30" Margin="0,2,0,15">
                    <ComboBoxItem Content="Самец"/>
                    <ComboBoxItem Content="Самка"/>
                </ComboBox>

                <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="35" 
                            Background="#6B8E23" Foreground="White" Margin="5"
                            Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="35"
                            Background="#A0522D" Foreground="White" Margin="5"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
