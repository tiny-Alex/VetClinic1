<Window x:Class="VetClinic.Windows.ClientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.Windows"
        mc:Ignorable="d"
        Title="ClientEditWindow" Height="450" Width="800">
    <Grid Background="#FAF0E6">
        <StackPanel Margin="15">

            <Border Background="#8B7355" CornerRadius="3" Padding="10" Margin="0,0,0,15">
                <TextBlock x:Name="TitleText" Text="Редактирование клиента" 
                          Foreground="White" FontSize="16" 
                          HorizontalAlignment="Center"/>
            </Border>

            <Label x:Name="FirstNameLabel" Content="Имя" Foreground="#8B7355" FontWeight="Bold"/>
            <TextBox x:Name="FirstNameBox" Height="30" Margin="0,2,0,10"/>

            <Label x:Name="LastNameLabel" Content="Фамилия" Foreground="#8B7355" FontWeight="Bold"/>
            <TextBox x:Name="LastNameBox" Height="30" Margin="0,2,0,10"/>

            <Label x:Name="PhoneLabel" Content="Телефон" Foreground="#8B7355" FontWeight="Bold"/>
            <TextBox x:Name="PhoneBox" Height="30" Margin="0,2,0,10"/>

            <Label x:Name="EmailLabel" Content="Email" Foreground="#8B7355" FontWeight="Bold"/>
            <TextBox x:Name="EmailBox" Height="30" Margin="0,2,0,15"/>


            <StackPanel x:Name="ButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="35" 
                        Background="#6B8E23" Foreground="White" Margin="5"
                        Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Отмена" Width="100" Height="35"
                        Background="#A0522D" Foreground="White" Margin="5"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
