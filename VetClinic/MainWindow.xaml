<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FAF0E6">
        <!-- Навигационная панель -->
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" 
                        Orientation="Horizontal" 
                        Background="#8B7355" 
                        Height="50">

                <Button x:Name="AdminPageButton" 
                        Content="Админ" 
                        Width="80" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        FontWeight="Bold"/>

                <Button x:Name="VetPageButton" 
                        Content="Ветеринар" 
                        Width="80" 
                        Margin="10,5" 
                        Background="#A0522D" 
                        Foreground="White"
                        FontWeight="Bold"/>

                <Button x:Name="ManagerPageButton" 
                        Content="Менеджер" 
                        Width="80" 
                        Margin="10,5" 
                        Background="#556B2F" 
                        Foreground="White"
                        FontWeight="Bold"/>

                <Separator Width="20" Visibility="Hidden"/>

                <TextBlock x:Name="CurrentRoleText" 
                           Text="Выберите роль" 
                           VerticalAlignment="Center" 
                           Foreground="White" 
                           FontSize="14"
                           Margin="20,0"/>
            </StackPanel>

            <!-- Область для отображения страниц -->
            <Frame x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
