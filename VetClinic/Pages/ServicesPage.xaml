<Page x:Class="VetClinic.Pages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#D2B48C">
            <Button x:Name="AddServiceButton" Content="Добавить услугу" Width="120" Margin="5" Background="#6B8E23" Foreground="White" Click="AddServiceButton_Click"/>
            <Button x:Name="EditServiceButton" Content="Редактировать" Width="100" Margin="5" Background="#8B7355" Foreground="White" Click="EditServiceButton_Click"/>
            <Button x:Name="DeleteServiceButton" Content="Удалить" Width="80" Margin="5" Background="#A0522D" Foreground="White" Click="DeleteServiceButton_Click"/>
            </StackPanel>

        <DataGrid x:Name="ServicesDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ServiceIDColumn" Header="ID" Binding="{Binding ServiceID}" Width="50"/>
                <DataGridTextColumn x:Name="ServiceNameColumn" Header="Название" Binding="{Binding ServiceName}" Width="150"/>
                <DataGridTextColumn x:Name="ServicePriceColumn" Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="80"/>
                <DataGridTextColumn x:Name="ServiceDescColumn" Header="Описание" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
