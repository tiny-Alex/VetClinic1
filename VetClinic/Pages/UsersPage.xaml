<Page x:Class="VetClinic.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#D2B48C">
            <Button x:Name="AddUserButton" Content="Добавить" Width="80" Margin="5" Background="#6B8E23" Foreground="White" Click="AddUserButton_Click"/>
            <Button x:Name="EditUserButton" Content="Редактировать" Width="100" Margin="5" Background="#8B7355" Foreground="White" Click="EditUserButton_Click"/>
            <Button x:Name="DeleteUserButton" Content="Удалить" Width="80" Margin="5" Background="#A0522D" Foreground="White" Click="DeleteUserButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="UsersDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="UserIDColumn" Header="ID" Binding="{Binding UserID}" Width="50"/>
                <DataGridTextColumn x:Name="UsernameColumn" Header="Логин" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn x:Name="EmailColumn" Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn x:Name="RoleIDColumn" Header="ID роли" Binding="{Binding RoleID}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
