<Page x:Class="VetClinic.Pages.ManagerMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerMainPage">

    <Grid Background="#FAF0E6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="#556B2F" 
                BorderBrush="#6B8E23" 
                BorderThickness="2">
            <StackPanel>
                <TextBlock x:Name="ManagerTitleText" 
                           Text="Менеджер" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"/>

                <Separator Height="2" Background="#D2B48C" Margin="5"/>

                <Button x:Name="ManagerClientsButton" 
                        Content="Клиенты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#8B7355" 
                        Foreground="White"
                        Click="ManagerClientsButton_Click"/>

                <Button x:Name="ManagerVisitsButton" 
                        Content="Визиты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#8B7355" 
                        Foreground="White"
                        Click="ManagerVisitsButton_Click"/>

                <Button x:Name="ManagerReportsButton" 
                        Content="Отчеты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#A0522D" 
                        Foreground="White"
                        Click="ManagerReportsButton_Click"/>
            </StackPanel>
        </Border>

        <Frame x:Name="ManagerContentFrame" 
               Grid.Column="1" 
               Margin="10"/>
    </Grid>
</Page>
