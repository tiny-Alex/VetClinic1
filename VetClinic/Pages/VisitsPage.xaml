<Page x:Class="VetClinic.Pages.VisitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisitsPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10" 
                    Background="#D2B48C" >

            <Button x:Name="AddButton" 
                    Content="Добавить" 
                    Width="80" 
                    Height="30" 
                    Margin="5" 
                    Background="#6B8E23" 
                    Foreground="White"
                    Click="AddButton_Click"/>

            <Button x:Name="EditButton" 
                    Content="Редактировать" 
                    Width="100" 
                    Height="30" 
                    Margin="5" 
                    Background="#8B7355" 
                    Foreground="White"
                    Click="EditButton_Click"/>

            <Button x:Name="DeleteButton" 
                    Content="Удалить" 
                    Width="80" 
                    Height="30" 
                    Margin="5" 
                    Background="#A0522D" 
                    Foreground="White"
                    Click="DeleteButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="VisitsDataGrid" 
                  Grid.Row="1" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  Background="White" 
                  BorderBrush="#8B7355" 
                  BorderThickness="1" >

            <DataGrid.Columns>

                <DataGridTextColumn x:Name="VeterinarianUserColumn" 
                                    Header="Ветеринар" 
                                    Binding="{Binding VeterinarianUserID}" 
                                    Width="80"/>

                <DataGridTextColumn x:Name="VisitDateColumn" 
                                    Header="Дата визита" 
                                    Binding="{Binding VisitDate, StringFormat=d}" 
                                    Width="100"/>

                <DataGridTextColumn x:Name="SymptomsColumn" 
                                    Header="Симптомы" 
                                    Binding="{Binding Symptoms}" 
                                    Width="150"/>

                <DataGridTextColumn x:Name="DiagnosisColumn" 
                                    Header="Диагноз" 
                                    Binding="{Binding Diagnosis}" 
                                    Width="150"/>

                <DataGridTextColumn x:Name="PrescriptionColumn" 
                                    Header="Назначение" 
                                    Binding="{Binding Prescription}" 
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
