<Page x:Class="VetClinic.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" Background="#D2B48C">
            <TextBlock x:Name="ReportsTitleText" 
                       Text="Генерация отчетов и диаграмм" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#2F4F4F"
                       Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ReportTypeComboBox" 
                          Width="180" 
                          Margin="5"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Круговая диаграмма"/>
                    <ComboBoxItem Content="Столбчатая диаграмма"/>
                    <ComboBoxItem Content="Линейный график"/>
                </ComboBox>

                <TextBlock Text="с" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <DatePicker x:Name="ReportStartDatePicker" 
                           Width="120" 
                           Margin="5"
                           SelectedDate="{x:Static sys:DateTime.Now}"/>

                <TextBlock Text="по" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <DatePicker x:Name="ReportEndDatePicker" 
                           Width="120" 
                           Margin="5"
                           SelectedDate="{x:Static sys:DateTime.Now}"/>

                
                <Button x:Name="GenerateReportButton" 
                        Content="Сгенерировать" 
                        Width="120" 
                        Height="30"
                        Margin="5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        FontWeight="Bold"
                        Click="GenerateReportButton_Click"/>

                <Button x:Name="ExportPDFButton" 
                        Content="Экспорт PDF" 
                        Width="100" 
                        Height="30"
                        Margin="5" 
                        Background="#8B7355" 
                        Foreground="White"
                        Click="ExportPDFButton_Click"/>

                <Button x:Name="ExportCSVButton" 
                        Content="Экспорт CSV" 
                        Width="100" 
                        Height="30"
                        Margin="5" 
                        Background="#556B2F" 
                        Foreground="White"
                        Click="ExportCSVButton_Click"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" 
                Margin="10" 
                Background="White" 
                BorderBrush="#8B7355" 
                BorderThickness="1"
                CornerRadius="5">
            <Canvas x:Name="ChartCanvas" SizeChanged="ChartCanvas_SizeChanged">
                <TextBlock x:Name="ChartPlaceholderText" 
                           Text="Диаграмма будет отображена здесь" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Foreground="#8B7355"
                           FontSize="12"
                           FontStyle="Italic"/>
            </Canvas>
        </Border>
    </Grid>
</Page>