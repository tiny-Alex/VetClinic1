<Page x:Class="VetClinic.Pages.PetsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PetsPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#D2B48C">
            <Button x:Name="AddPetButton" Content="Добавить питомца" Width="120" Margin="5" Background="#6B8E23" Foreground="White" Click="AddPetButton_Click"/>
            <Button x:Name="EditPetButton" Content="Редактировать" Width="100" Margin="5" Background="#8B7355" Foreground="White" Click="EditPetButton_Click"/>
            <Button x:Name="DeletePetButton" Content="Удалить" Width="80" Margin="5" Background="#A0522D" Foreground="White" Click="DeletePetButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="PetsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="PetIDColumn" Header="ID" Binding="{Binding PetID}" Width="50"/>
                <DataGridTextColumn x:Name="PetNameColumn" Header="Кличка" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn x:Name="PetSpeciesColumn" Header="Вид" Binding="{Binding Species}" Width="100"/>
                <DataGridTextColumn x:Name="PetBreedColumn" Header="Порода" Binding="{Binding Breed}" Width="100"/>
                <DataGridTextColumn x:Name="PetDOBColumn" Header="Дата рождения" Binding="{Binding DateOfBirth, StringFormat=d}" Width="100"/>
                <DataGridTextColumn x:Name="PetGenderColumn" Header="Пол" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn x:Name="PetClientIDColumn" Header="ID клиента" Binding="{Binding ClientID}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
