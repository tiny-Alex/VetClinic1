<Page x:Class="VetClinic.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <Grid Background="#FAF0E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="10" 
                    Background="#D2B48C" >

            <Button x:Name="AddClientButton" 
                    Content="Добавить" 
                    Width="80" 
                    Height="30" 
                    Margin="5" 
                    Background="#6B8E23" 
                    Foreground="White"
                    Click="AddClientButton_Click"/>

            <Button x:Name="EditClientButton" 
                    Content="Редактировать" 
                    Width="100" 
                    Height="30" 
                    Margin="5" 
                    Background="#8B7355" 
                    Foreground="White"
                    Click="EditClientButton_Click"/>

            <Button x:Name="DeleteClientButton" 
                    Content="Удалить" 
                    Width="80" 
                    Height="30" 
                    Margin="5" 
                    Background="#A0522D" 
                    Foreground="White"
                    Click="DeleteClientButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="ClientsDataGrid" 
                  Grid.Row="1" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  Background="White" 
                  BorderBrush="#8B7355" 
                  BorderThickness="1">

            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ClientIDColumn" 
                                    Header="ID" 
                                    Binding="{Binding ClientID}" 
                                    Width="50"/>

                <DataGridTextColumn x:Name="FirstNameColumn" 
                                    Header="Имя" 
                                    Binding="{Binding FirstName}" 
                                    Width="120"/>

                <DataGridTextColumn x:Name="LastNameColumn" 
                                    Header="Фамилия" 
                                    Binding="{Binding LastName}" 
                                    Width="120"/>

                <DataGridTextColumn x:Name="PhoneColumn" 
                                    Header="Телефон" 
                                    Binding="{Binding PhoneNumber}" 
                                    Width="120"/>

                <DataGridTextColumn x:Name="EmailColumn" 
                                    Header="Email" 
                                    Binding="{Binding Email}" 
                                    Width="150"/>

                <DataGridTextColumn x:Name="RegDateColumn" 
                                    Header="Дата регистрации" 
                                    Binding="{Binding RegistrationDate, StringFormat=d}" 
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
