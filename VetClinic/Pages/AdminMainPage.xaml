<Page x:Class="VetClinic.Pages.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VetClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage">

    <Grid Background="#FAF0E6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левое меню -->
        <Border Grid.Column="0" 
                Background="#8B7355" 
                BorderBrush="#A0522D" 
                BorderThickness="2">
            <StackPanel>
                <TextBlock x:Name="AdminTitleText" 
                           Text="Администратор" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10" 
                           HorizontalAlignment="Center"/>

                <Separator Height="2" Background="#D2B48C" Margin="5"/>

                <Button x:Name="AdminClientsButton" 
                        Content="Клиенты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        Click="AdminClientsButton_Click"/>

                <Button x:Name="AdminPetsButton" 
                        Content="Питомцы" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        Click="AdminPetsButton_Click"/>

                <Button x:Name="AdminVisitsButton" 
                        Content="Визиты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        Click="AdminVisitsButton_Click"/>

                <Button x:Name="AdminUsersButton" 
                        Content="Пользователи" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        Click="AdminUsersButton_Click"/>

                <Button x:Name="AdminServicesButton" 
                        Content="Услуги" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#6B8E23" 
                        Foreground="White"
                        Click="AdminServicesButton_Click"/>

                <Button x:Name="AdminReportsButton" 
                        Content="Отчеты" 
                        Width="150" 
                        Height="35" 
                        Margin="10,5" 
                        Background="#556B2F" 
                        Foreground="White"
                        Click="AdminReportsButton_Click"/>
            </StackPanel>
        </Border>

        <Frame x:Name="AdminContentFrame" 
               Grid.Column="1" 
               Margin="10"/>
    </Grid>
</Page>
